<odoo>
    <record id="messenger_message_view_form_popup" model="ir.ui.view">
        <field name="name">messenger.message.view.form.popup</field>
        <field name="model">chatter.manager</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Render window message" create="false">
                <field name="note" placeholder="Escribe un mensaje..."/>
                <footer>
                    <button string="Enviar mensaje a Messenger" name="chatter_handler" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>