<odoo>
    <record id="messenger_message_view_form_popup" model="ir.ui.view">
        <field name="name">messenger.message.view.form.popup</field>
        <field name="model">messenger.message</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Log an Activity" create="false">
                <sheet string="Activity">
                    <field name="note" placeholder="Escribe un mensaje..."/>
                    <footer>
                        <button string="Enviar mensaje" name="send_message_form" type="object" class="btn-primary"
                        <button string="Cancelar" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>