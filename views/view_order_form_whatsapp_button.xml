<odoo>
    <record id="view_order_form_whatsapp_button" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//header//button[@name='action_quotation_send']" position="after">
                <button type="object" name="traceability_whatsapp" string="Enviar por Whatsapp" />
            </xpath>
        </field>
    </record>
</odoo>