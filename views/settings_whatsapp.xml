<odoo>
    <data>
        <record id="actions_whatsapp_settings" model="ir.actions.act_window">
            <field name="name">Whatsapp Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'conf_whatsapp'}</field>
        </record>

        <record id="cpq_data_config_settings" model="ir.ui.view">
            <field name="name">res.config.view.inherited.cpq_data</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Whatsapp Settings" string="Social media messages"
                         data-key="conf_whatsapp">
                        <h2>Whatsapp</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="whatsapp_crm"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        Crm
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="whatsapp_sales"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        Ventas
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="whatsapp_inventory"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        Invetario
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="content-group">
                                    <div class="text-muted">
                                        <label for="whatsapp_token" string="Token"/>
                                    </div>
                                    <field name="whatsapp_token"/>
                                </div>
                            </div>
                        </div>
                        <h2>Facebook</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="facebook_crm"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        Crm
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="facebook_sales"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        Ventas
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="facebook_inventory"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        Invetario
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="content-group">
                                    <div class="text-muted">
                                        <label for="facebook_token" string="Token"/>
                                    </div>
                                    <field name="facebook_token"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>